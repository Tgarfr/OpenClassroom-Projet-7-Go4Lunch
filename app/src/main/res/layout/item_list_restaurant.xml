<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list_restaurant"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="5dp"
    android:paddingStart="0dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="2dp"
        android:text="@string/restaurant_list_name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="2dp"
        android:text="@string/restaurant_list_address"
        app:layout_constraintBottom_toTopOf="@id/restaurant_opening_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_name" />

    <TextView
        android:id="@+id/restaurant_opening_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="2dp"
        android:text="@string/restaurant_list_opening_time"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_address" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/restaurant_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_restaurant_image_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurant_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/restaurant_list_distance"
        app:layout_constraintRight_toLeftOf="@id/restaurant_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurant_number_of_workmate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/restaurant_list_workmate_count"
        app:layout_constraintBottom_toBottomOf="@id/restaurant_workmate_image"
        app:layout_constraintRight_toLeftOf="@id/restaurant_image" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/restaurant_workmate_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/icon_restaurant_workmate_24"
        app:layout_constraintRight_toLeftOf="@id/restaurant_number_of_workmate"
        app:layout_constraintTop_toBottomOf="@id/restaurant_distance" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/restaurant_star_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_restaurant_star_24"
        app:layout_constraintRight_toLeftOf="@id/restaurant_image"
        app:layout_constraintTop_toBottomOf="@id/restaurant_workmate_image" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/restaurant_star_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_restaurant_star_24"
        app:layout_constraintRight_toLeftOf="@id/restaurant_star_1"
        app:layout_constraintTop_toBottomOf="@id/restaurant_workmate_image" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/restaurant_star_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_restaurant_star_24"
        app:layout_constraintRight_toLeftOf="@id/restaurant_star_2"
        app:layout_constraintTop_toBottomOf="@id/restaurant_workmate_image" />

</androidx.constraintlayout.widget.ConstraintLayout>